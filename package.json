    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint 'src/**/*.{js,ts,svelte}' '*.{js,ts,svelte}'",
    "lint:fix": "eslint --fix 'src/**/*.{js,ts,svelte}' '*.{js,ts,svelte}'",
